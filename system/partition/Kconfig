
config PKG_USING_PARTITION
    bool "a simple partition for block device in rt-thread."
    default n

if PKG_USING_PARTITION

    config PKG_PARTITION_PATH
        string
        default "/packages/system/partition"

    select PKG_PARTITION_PATH

    config PKG_PARTITION_VER
        string
        default "v1.0.0"

    select PKG_PARTITION_VER

endif
