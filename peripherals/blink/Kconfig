
# Kconfig file for package blink
menuconfig PKG_USING_BLINK
    bool "blink: easy led blink support lib"
    default n

if PKG_USING_BLINK

    config PKG_BLINK_PATH
        string
        default "/packages/peripherals/blink"

    choice
        prompt "Version"
        default PKG_USING_BLINK_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_BLINK_V100
            bool "v1.0.0"

        config PKG_USING_BLINK_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_BLINK_VER
       string
       default "v1.0.0"    if PKG_USING_BLINK_V100
       default "latest"    if PKG_USING_BLINK_LATEST_VERSION

endif